# Advanced Income Classification - Docker Image
FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY scripts/ ./scripts/
COPY setup.py .
COPY README.md .

# Install the package
RUN pip install -e .

# Create directories for data and results
RUN mkdir -p data/raw data/processed results/experiments models/saved_models

# Set environment variables
ENV PYTHONPATH=/app
ENV INCOME_CLASSIFICATION_ENV=production

# Default command
CMD ["python", "scripts/train_models.py", "--help"]

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD python -c "import src; print('Health check passed')" || exit 1

# Labels
LABEL maintainer="your.email@domain.com"
LABEL version="1.0.0"
LABEL description="Advanced Income Classification ML Pipeline"
